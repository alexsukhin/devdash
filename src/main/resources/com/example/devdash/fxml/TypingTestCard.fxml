<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane fx:id="rootNode" focusTraversable="true" prefHeight="398.0" prefWidth="623.0" style="-fx-background-color: #D6D2D2;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.devdash.controller.cards.TypingTest.TypingTestCardController">
   <children>
      <VBox fx:id="mainVBox" alignment="CENTER" maxWidth="350.0" spacing="10" style="-fx-padding: 10;">
         <children>
            <TextFlow fx:id="textFlow">
               <children>
               </children>
            </TextFlow>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <StackPane HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="speed" text="WPM:" />
                     </children>
                  </StackPane>
                  <StackPane HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="time" text="Time:" />
                     </children>
                  </StackPane>
                  <StackPane HBox.hgrow="ALWAYS">
                     <children>
                        <Button focusTraversable="false" mnemonicParsing="false" onAction="#resetText" style="-fx-background-color: transparent;">
                           <graphic>
                              <FontIcon iconLiteral="fa-repeat" />
                           </graphic>
                        </Button>
                     </children>
                  </StackPane>
               </children>
            </HBox>
            <Label fx:id="focusLabel" text="Click here to start typing!" />
         </children>
      </VBox>
   </children>
</StackPane>
