<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootVBox" spacing="10" style="-fx-background-color: #D6D2D2; -fx-padding: 10;" stylesheets="@TabPane.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.devdash.controller.cards.PomodoroCardController">
   <TabPane tabClosingPolicy="UNAVAILABLE">
     <tabs>
       <Tab text="Focus">
         <content>
           <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                  <children>
                      <Button fx:id="startButton" onAction="#handleStart" text="Start" />
                  </children>
               </AnchorPane>
         </content>
       </Tab>
       <Tab text="Break">
         <content>
           <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
         </content>
       </Tab>
     </tabs>
   </TabPane>
</VBox>
