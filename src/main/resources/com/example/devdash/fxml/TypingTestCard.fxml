<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane fx:id="rootNode" focusTraversable="true" prefHeight="398.0" prefWidth="623.0" styleClass="dashboard-card, theme-background" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.devdash.controller.cards.TypingTest.TypingTestCardController">
   <children>
      <VBox fx:id="mainVBox" alignment="CENTER" maxWidth="350.0" spacing="10">
         <children>
            <TextFlow fx:id="textFlow" textAlignment="CENTER">
               <children>
               </children>
            </TextFlow>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <StackPane HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="speed" text="WPM:" />
                     </children>
                  </StackPane>
                  <StackPane HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="time" text="Time:" />
                     </children>
                  </StackPane>
                  <StackPane HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="accuracy" text="Accuracy:" />
                     </children>
                  </StackPane>
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Label fx:id="focusLabel" text="Click here to start typing!" HBox.hgrow="ALWAYS" />
                  <Region minWidth="5.0" />
                  <StackPane>
                     <children>
                        <Button focusTraversable="false" mnemonicParsing="false" onAction="#resetText" styleClass="color-transparent">
                           <graphic>
                              <FontIcon iconLiteral="fa-repeat" styleClass="theme-text" />
                           </graphic>
                        </Button>
                     </children>
                  </StackPane>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
