<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.devdash.controller.LoginController">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" styleClass="theme-background" HBox.hgrow="ALWAYS">
         <children>
            <Label text="Integrate DevDash into your Workflow!" styleClass="theme-text"/>
         </children>
      </VBox>
      <VBox alignment="CENTER" fillWidth="false" prefHeight="200.0" prefWidth="200.0" spacing="15.0" HBox.hgrow="ALWAYS">
         <children>
            <Label fx:id="isConnected" text="Status" styleClass="theme-text"/>
            <TextField fx:id="txtUsername" promptText="Username" />
            <TextField fx:id="txtPassword" promptText="Password" />
            <Button mnemonicParsing="false" onAction="#login" text="Login"/>
            <HBox alignment="CENTER">
               <children>
                  <Label text="Don't have an account?" styleClass="theme-text"/>
                  <Button mnemonicParsing="false" onAction="#switchToSignup" styleClass="theme-text, color-transparent" text="Signup" />
               </children>
            </HBox>
         </children>
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </VBox>
   </children>
</HBox>
