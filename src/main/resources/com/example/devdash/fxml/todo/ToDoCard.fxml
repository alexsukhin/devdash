<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="rootNode" styleClass="dashboard-card, theme-background" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.devdash.controller.cards.todo.ToDoCardController">
   <children>
      <VBox alignment="TOP_CENTER" maxWidth="560.0" minWidth="-Infinity" spacing="10.0">
         <children>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <VBox fx:id="todoColumn" maxWidth="180.0" HBox.hgrow="ALWAYS">
                     <children>
                        <VBox spacing="5.0" styleClass="kanban-card">
                           <children>
                              <Label styleClass="font-bold, theme-text" text="To Do">
                                 <VBox.margin>
                                    <Insets left="5.0" top="5.0" />
                                 </VBox.margin>
                              </Label>
                              <ScrollPane fitToWidth="true">
                                 <content>
                                    <VBox fx:id="todoTasks" spacing="5.0">
                                       <padding>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </padding>
                                    </VBox>
                                 </content>
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                                 <styleClass>
                                    <String fx:value="theme-text" />
                                    <String fx:value="kanban-card" />
                                 </styleClass>
                              </ScrollPane>
                              <Button fx:id="addTodoCard" mnemonicParsing="false" text="+ Add a Card">
                                 <styleClass>
                                    <String fx:value="color-transparent" />
                                    <String fx:value="theme-text" />
                                 </styleClass>
                              </Button>
                           </children>
                        </VBox>
                        <Region />
                     </children>
                  </VBox>
                  <VBox fx:id="inProgressColumn" maxWidth="180.0" HBox.hgrow="ALWAYS">
                     <children>
                        <VBox spacing="5.0" styleClass="kanban-card">
                           <children>
                              <Label styleClass="font-bold, theme-text" text="In Progress">
                                 <VBox.margin>
                                    <Insets left="5.0" top="5.0" />
                                 </VBox.margin>
                              </Label>
                              <ScrollPane fitToWidth="true">
                                 <content>
                                    <VBox fx:id="inProgressTasks" spacing="5.0">
                                       <padding>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </padding>
                                    </VBox>
                                 </content>
                                 <styleClass>
                                    <String fx:value="theme-text" />
                                    <String fx:value="kanban-card" />
                                 </styleClass>
                              </ScrollPane>
                              <Button fx:id="addProgressCard" mnemonicParsing="false" text="+ Add a Card">
                                 <styleClass>
                                    <String fx:value="color-transparent" />
                                    <String fx:value="theme-text" />
                                 </styleClass>
                              </Button>
                           </children>
                        </VBox>
                        <Region VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
                  <VBox fx:id="doneColumn" maxWidth="180.0" HBox.hgrow="ALWAYS">
                     <children>
                        <VBox spacing="5.0" styleClass="kanban-card">
                           <children>
                              <Label styleClass="font-bold, theme-text" text="Done">
                                 <VBox.margin>
                                    <Insets left="5.0" top="5.0" />
                                 </VBox.margin>
                              </Label>
                              <ScrollPane fitToWidth="true">
                                 <content>
                                    <VBox fx:id="doneTasks" spacing="5.0">
                                       <padding>
                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                       </padding>
                                    </VBox>
                                 </content>
                                 <styleClass>
                                    <String fx:value="theme-text" />
                                    <String fx:value="kanban-card" />
                                 </styleClass>
                              </ScrollPane>
                              <Button fx:id="addDoneCard" mnemonicParsing="false" text="+ Add a Card">
                                 <styleClass>
                                    <String fx:value="color-transparent" />
                                    <String fx:value="theme-text" />
                                 </styleClass>
                              </Button>
                           </children>
                        </VBox>
                        <Region />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
