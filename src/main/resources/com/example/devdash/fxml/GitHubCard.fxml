<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootNode" style="-fx-background-color: #D6D2D2;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.devdash.controller.cards.GitHub.GitHubCardController">
   <children>
      <HBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="30.0">
         <children>
            <Region prefWidth="10.0" />
            <Label text="Status: " />
            <Label fx:id="linkText" text="Not Linked" />
            <Button fx:id="linkButton" mnemonicParsing="false" onAction="#linkUser" style="-fx-background-color: transparent; -fx-font-weight: bold;">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <ScrollPane fitToWidth="true" style="-fx-background: #D6D2D2; -fx-background-color: #D6D2D2;" VBox.vgrow="ALWAYS">
         <content>
            <StackPane prefHeight="150.0" prefWidth="200.0">
               <children>
                  <VBox fx:id="commitsContainer" maxWidth="550.0" spacing="1.0" />
               </children>
            </StackPane>
         </content>
      </ScrollPane>
      <StackPane prefHeight="100.0" VBox.vgrow="ALWAYS">
         <children>
            <Label text="Heatmap!">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
      </StackPane>
   </children>
</VBox>
