<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.ToggleGroup?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.devdash.controller.cards.typingtest.SettingsController">
    <HBox alignment="CENTER" spacing="10.0">
        <children>
            <RadioButton fx:id="punctuationToggle" mnemonicParsing="false" styleClass="theme-text" text="Punctuation" />
            <Region minWidth="25.0" />
            <RadioButton fx:id="words10Radio" mnemonicParsing="false" styleClass="theme-text" text="10">
                <toggleGroup>
                    <ToggleGroup fx:id="wordLength" />
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="words25Radio" mnemonicParsing="false" styleClass="theme-text" text="25" toggleGroup="$wordLength" />
            <RadioButton fx:id="words50Radio" mnemonicParsing="false" styleClass="theme-text" text="50" toggleGroup="$wordLength" />
        </children>
    </HBox>
</VBox>
