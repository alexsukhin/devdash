<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.ToggleGroup?>
<?import java.lang.String?>
<VBox fx:id="rootVBox" style="-fx-background-color: #D6D2D2; " stylesheets="@ToggleTab.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.devdash.controller.cards.Pomodoro.PomodoroCardController">

    <children>

      <HBox fx:id="paneControls" alignment="CENTER" minHeight="75.0" stylesheets="@ToggleTab.css">
         <children>
            <RadioButton fx:id="focusButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Focus" HBox.hgrow="ALWAYS">
                <toggleGroup>
                    <ToggleGroup fx:id="paneToggleGroup" />
                </toggleGroup>
                <font>
                  <Font size="18.0" />
               </font>
                <styleClass>
                    <String fx:value="toggle-button" />
                </styleClass>
            </RadioButton>
            <RadioButton fx:id="breakButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Break" toggleGroup="$paneToggleGroup" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="18.0" />
               </font>
                <styleClass>
                    <String fx:value="toggle-button" />
                </styleClass>
            </RadioButton>
         </children>
      </HBox>
      <StackPane fx:id="contentPane" VBox.vgrow="ALWAYS" />
   </children>
</VBox>
