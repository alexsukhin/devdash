<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox fx:id="rootNode" alignment="CENTER" maxWidth="600.0" spacing="10" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.devdash.controller.cards.typingtest.TypingTestController">
    <children>
      <Region VBox.vgrow="ALWAYS" />
        <TextFlow fx:id="textFlow" textAlignment="CENTER" />
        <Region VBox.vgrow="ALWAYS" />
        <HBox alignment="CENTER">
            <children>
                <StackPane HBox.hgrow="ALWAYS">
                    <children>
                        <Label fx:id="time" text="Time:" />
                    </children>
                </StackPane>
                <StackPane HBox.hgrow="ALWAYS">
                    <children>
                        <Label fx:id="speed" text="WPM:" />
                    </children>
                </StackPane>
                <StackPane HBox.hgrow="ALWAYS">
                    <children>
                        <Label fx:id="accuracy" text="Accuracy:" />
                    </children>
                </StackPane>
            </children>
        </HBox>
        <HBox alignment="CENTER">
            <children>
                <Label fx:id="focusLabel" text="Click here to start typing!" HBox.hgrow="ALWAYS" />
                <Region minWidth="5.0" />
                <StackPane>
                    <children>
                        <Button focusTraversable="false" mnemonicParsing="false" onAction="#resetText" styleClass="color-transparent">
                            <graphic>
                                <FontIcon iconLiteral="fas-redo" styleClass="theme-text" />
                            </graphic>
                        </Button>
                    </children>
                </StackPane>
            </children>
        </HBox>
    </children>
</VBox>
