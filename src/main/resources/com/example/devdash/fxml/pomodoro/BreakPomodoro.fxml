<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.devdash.controller.cards.pomodoro.BreakPomodoroController">
   <children>
      <Label fx:id="timer" styleClass="theme-text" text="5:00">
         <font>
            <Font size="35.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <Button mnemonicParsing="false" onAction="#resetTime" styleClass="color-transparent">
               <graphic>
                  <FontIcon iconLiteral="fas-redo" styleClass="theme-text" />
               </graphic>
            </Button>
            <ToggleButton fx:id="pomodoroToggle" mnemonicParsing="false" text="Start" styleClass="button-theme"/>
            <Button mnemonicParsing="false" onAction="#changeTime" styleClass="color-transparent">
               <graphic>
                  <FontIcon iconLiteral="fas-cog" styleClass="theme-text" />
               </graphic>
            </Button>
         </children>
      </HBox>
      <Region minHeight="10.0" />
      <Label fx:id="timeFocused" text="Time Focused Today:  19 min 26 sec" />
   </children>
</VBox>
