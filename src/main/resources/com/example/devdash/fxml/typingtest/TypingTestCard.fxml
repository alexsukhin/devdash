<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox fx:id="rootNode" focusTraversable="true" styleClass="dashboard-card, theme-background" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.devdash.controller.cards.typingtest.TypingTestCardController">
   <children>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="typingButton" mnemonicParsing="false" styleClass="color-transparent, theme-text">
               <graphic>
                  <FontIcon iconLiteral="fas-keyboard" styleClass="theme-text" />
               </graphic>
            </Button>
            <Region minWidth="20.0" />
            <Button fx:id="statsButton" mnemonicParsing="false" styleClass="color-transparent, theme-text">
               <graphic>
                  <FontIcon iconLiteral="fas-info-circle" styleClass="theme-text" />
               </graphic>
            </Button>
            <Region minWidth="20.0" />
            <Button fx:id="leaderboardButton" mnemonicParsing="false" styleClass="color-transparent, theme-text">
               <graphic>
                  <FontIcon iconLiteral="fas-crown" styleClass="theme-text" />
               </graphic>
            </Button>
            <Region minWidth="20.0" />
            <Button fx:id="settingsButton" mnemonicParsing="false" styleClass="color-transparent, theme-text">
               <graphic>
                  <FontIcon iconLiteral="fas-cog" styleClass="theme-text" />
               </graphic>
            </Button>
         </children>
      </HBox>
      <StackPane fx:id="contentPane" VBox.vgrow="ALWAYS" />
   </children>
</VBox>
